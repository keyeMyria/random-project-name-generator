{
  "name": "random-project-name-generator-server",
  "version": "1.0.0",
  "description": "The server for the random project name generator",
  "author": "Christoph Stach",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "NODE_ENV=development nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "deploy:openode": "npm run prestart:prod"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0",
    "@nestjs/core": "^5.0.0",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/jwt": "0.0.1",
    "@nestjs/mongoose": "^5.0.0",
    "@nestjs/passport": "^1.1.0",
    "@types/mailgun-js": "^0.16.0",
    "@types/uuid": "^3.4.3",
    "apollo-server-express": "^1.4.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^6.0.0",
    "fastify-formbody": "^2.0.0",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.5",
    "jsonwebtoken": "^8.3.0",
    "mailgun.js": "^2.0.1",
    "mongoose": "^5.2.3",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "^2.6.2",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/bcryptjs": "^2.4.1",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/node": "^9.3.0",
    "@types/passport": "^0.4.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.4",
    "jest": "^21.2.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "engines": {
    "node": "10.6.0"
  }
}
